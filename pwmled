import board
import analogio as aio
import time
import pwmio as pwm

led = pwm.PWMOut(board.LED, frequency = 50000, duty_cycle= 0)
pot = aio.AnalogIn(board.A1)
minimum = 128
maximum = 65535
#n = (pot.value - minimum)/(maximum - minimum + 1)
percent_on = 99

while True:
    led.duty_cycle = int(65535 * percent_on / 100)
    time.sleep(0.05)
    print(pot.value)
    time.sleep(0.05)
    percent_on = (pot.value - minimum)/(maximum - minimum + 1)
